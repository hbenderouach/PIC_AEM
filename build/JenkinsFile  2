#!/usr/bin/groovy
@Library('pipeline-library-sqli') _
pipeline {
    agent any
    tools {
        maven 'maven-3-5-3'
    }
    stages {
        stage('Checkout Git') {
          steps {
            script { 
                gitlabCheckout('${branch}','${url}')
             }
          }
        }
        stage('Compile') {
            steps {
              script {
                 mavenCompile()
             }
            }
        }
        stage('Test & Build') {
             steps {
                parallel (
                    "build": { mavenInstall() },
                    "unit tests": { mavenTest() }
                )
             }
        }
        stage('Quality') {
            steps {
                script {
                 sonarQuality('SONAR')
             }
            }
        }

    }
}
